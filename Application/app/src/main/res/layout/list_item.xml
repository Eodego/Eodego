<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/listimg"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignParentLeft="true"
        android:layout_margin="15px" />

    <TextView
        android:id="@+id/listname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listimg"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/listaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/listimg"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/listclcdnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listname"
        android:layout_toRightOf="@id/listimg"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/listtelno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="150px"
        android:layout_alignParentRight="true"
        android:layout_margin="30px"
        android:background="@drawable/front"
        android:visibility="gone" />

    <RatingBar
        android:id="@+id/listrating"
        style="@style/starRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15px"
        android:layout_toRightOf="@id/listimg"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15px"
        android:layout_marginRight="10px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listorder"
            android:layout_width="150px"
            android:layout_height="60px"
            android:scaleType="fitStart"
            android:src="@drawable/order" />

        <ImageView
            android:id="@+id/listreserve"
            android:layout_width="150px"
            android:layout_height="60px"
            android:scaleType="fitStart"
            android:src="@drawable/reserve" />

        <ImageView
            android:id="@+id/listbaedal"
            android:layout_width="150px"
            android:layout_height="60px"
            android:scaleType="fitStart"
            android:src="@drawable/baedal" />
    </LinearLayout>
</RelativeLayout>