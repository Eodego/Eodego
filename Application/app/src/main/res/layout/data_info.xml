<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/infomagin"
        android:gravity="center">

        <ListView
            android:id="@+id/itemlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/datainfotime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relimg"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/infosize" />

    <TextView
        android:id="@+id/datainfouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datainfotime"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/infosize" />

    <LinearLayout
        android:id="@+id/dataline"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_below="@id/datainfouse"
        android:background="#999999"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/datainfoaddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dataline"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/infosize" />

    <TextView
        android:id="@+id/datainfotelno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datainfoaddr"
        android:layout_margin="10dp"
        android:autoLink="phone"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/infosize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="0px"
            android:layout_height="170px"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:background="@drawable/phone" />

        <ImageView
            android:layout_width="0px"
            android:layout_height="170px"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:background="@drawable/map" />

        <ImageView
            android:layout_width="0px"
            android:layout_height="170px"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:background="@drawable/picture" />
    </LinearLayout>
</RelativeLayout>